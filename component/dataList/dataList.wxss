.search{
  width: 100%;
  height: 75rpx;
  padding: 10rpx 15rpx;
  background: #2A8CE5;
  display: flex;
  flex-direction: row;
}
 .search-left{
  background: #4EA3E7;
  text-align: left;
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.search-left input{
  height: 100%;
  font-size: 26rpx;
  line-height: 60rpx;
}
.search-placeholder{
  color: #8CCEFD;
}
.search .search-left image{
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.search .search-right{
  width: 10%;
}
.search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}
.search .add-right{
  width: 20%;
  padding-right: 20rpx;
  text-align: right;
}
.search .add-right image{
  width: 55rpx;
  height: 55rpx;
  padding: 5rpx;
}


.data_box {
  height: 100%;
  background: #fff;
  display: flex;
}
.data_left {
  width: 95%;
}
.data_right {
  width: 5%;
  text-align: center;
}
.letter_item{
  display: block;
  font-size: 24rpx;
  color: #159ee7;
  text-align: center;
}
.first_letter{
  line-height: 60rpx;
  height: 60rpx;
  padding-left: 25rpx;
  font-size: 34rpx;
  background: #eee;
  color: #999;
}
.data_item {
  display: flex;
  flex-direction: row;
  justify-content:left;
  border-bottom: 1px solid #eee;
  padding-left: 25rpx;
}

.data_item_gray {
  display: flex;
  flex-direction: row;
  justify-content:left;
  border-bottom: 1px solid #eee;
  padding-left: 25rpx;
  color: #eee;
}

.data {
  display: flex;
  flex-direction: column;
  justify-content: flex-start; 
  width: 100%;
  padding: 10rpx 0rpx;
  font-size: 42rpx;
}
.row {
  width: 100%;
  display: flex;
  font-size: 42rpx;
  flex-direction: row;
}

.del {
  background-color: #ec4a47;
  width: 150rpx;
  text-align: center;
  right: 0;
  color: #fff;
  line-height: 150rpx;
}
