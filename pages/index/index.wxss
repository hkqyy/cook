.index-banner{
	width: 100%;
	height: 474rpx;
}
.index-banner .slide-image{
	width: 100%;
}
.wx-swiper-dot text{
	background: #f00;
}

.index-sum{
	width: 100%;
	display: flex;
	background: #2FB0B6;
  text-align: center;
  height: 120rpx;
  /* margin-top: 50rpx; */
  padding: 10rpx;
  color: #fff;
  font-size: 38rpx;
}
.index-sum-item{
	width: 50%;
  display: flex;
	text-align: center;
  flex-direction: column;
  border-right: 0.5rpx solid #fff;
}

.sum-amount {
  text-align: center;
  font-weight: bold;
  width: 100%;
}

.sum-text {
  text-align: center;
  width: 100%;
}

.index-menu{
	width: 100%;
	display: -webkit-flex;
	display: -webkit-box;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	background: #fff;
  text-align: center;
  margin-top: 30rpx;
}
.index-menu-item{
	width: 33%;
	text-align: center;
	margin-top: 10rpx;
	padding: 20rpx 20rpx;
	box-sizing: border-box;
	margin-bottom: -1rpx;
  flex-direction: column;
}
.index-menu-item image{
	width: 110rpx;
	height: 110rpx;
}
.index-menu-item text{
	display: block;
	font-size: 38rpx;
	line-height: 1.4;
	white-space: nowrap;
}

