
.btn-confirm button{
  height: 100%;
  width: 100%;
  color: #2A8CE5;
  text-align: center;
  line-height: 86rpx;
  font-size: 34rpx;
  border: 0;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  max-height: 600rpx;
  width: 100%;
  overflow-y:auto;
  overflow-x:hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 50rpx;
}

.th {
  color: #000;
}

.sub{
  width: 7%;
  text-align: center;
  margin-left: 20rpx;
}
.add{
  width: 7%;
  text-align: center;
}

.td-input {
  font-size: 32rpx;
}

.cnt-text{
  height: 2rem;
  width: 95%;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  color: #afb4db;
  text-align: center;
  line-height: 2rem;
  /* border-radius: 50%;       */
  /* -moz-border-radius: 50%;      
  -webkit-border-radius: 50%; */
  font-size: 42rpx;
  font-weight: bold;
}

.pay-wrap {
  background: #eee;
}

.select {
  width: 140rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #fff;
  text-align: center;
}

.select image {
  width: 90rpx;
  height: 100rpx;
  margin: 10rpx 0;
}

.select .badge {
  position: absolute;
  left: 12%;
  top: 0%;
}
.badge {
  display: inline-block;
  min-width: 40rpx;
  padding: 6rpx;
  font-size: 36rpx;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  border-radius: 25rpx;
  background-color: #fc3151;
}