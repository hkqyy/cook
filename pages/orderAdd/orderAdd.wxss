page {
  background-color: #f8f8f8;
  font-size: 38rpx;
}

.new-add {
  background-color: #fff;
}

.new-add-list {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.new-add-list text {
  width: 26%;
}

.new-add-list input {
  padding-right: 50rpx;
}

.new-add-list textarea {
  padding-right: 100rpx;
}

.new-add-list image {
  width: 50rpx;
  height: 50rpx;
}

.new-add-list .add-api {
  display: flex;
  align-items: center;
  width: 74%;
  justify-content: space-between;
}

.new-add-list .add-api textarea {
  width: 500rpx;
  height: 80rpx;
}

.new-add-list:last-child {
  justify-content: space-between;
}

.index-menu{
	width: 100%;
	display: flex;
	background: #fff;
  justify-content: center;
}
.index-menu-item{
	width: 33%;
	text-align: center;
	margin-top: 10rpx;
	padding: 20rpx 20rpx;
	box-sizing: border-box;
	margin-bottom: -1rpx;
  flex-direction: column;
}
.index-menu-item image{
	width: 110rpx;
	height: 110rpx;
}
.index-menu-item text{
	display: block;
	font-size: 36rpx;
	line-height: 1.4;
	white-space: nowrap;
}

.date {
  width: 74%;
}

.container-body{
  margin-bottom: 130rpx;
}

.search{
  width: 100%;
  height: 65rpx;
  background: #2A8CE5;
  display: flex;
  flex-direction: row;
}

.search .search-right{
  /* flex: 1; */
  width: 100rpx;
  color: #8CCEFD;
  line-height: 65rpx;
}
.search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

