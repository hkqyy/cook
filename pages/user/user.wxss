/* user */
page {
  background-color: #f8f8f8;
  font-size: 38rpx;
}
/* 头部 */

.user-head {
  height: 300rpx;
}

.user-head .mine-bg {
  width: 100%;
  height: 300rpx;
}

.user-head .user-head-pic-wrap {
  position: absolute;
  width: 100%;
  height: 300rpx;
  /* left: 40%; */
  top: 0;
}
.user-head .user-head-pic  {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 50rpx;
  margin-left: 40%;
}

.user-name {
  margin-left: 40%;
  display: block;
  margin-top: 10rpx;
  /* font-size: 32rpx; */
  color: #fff;
  width: 150rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
}

.un-login {
  margin-left: 20%;
  line-height:  300rpx;
  font-size: 42rpx;
  color: #fff;
}

.option-cont {
  margin-top: 20rpx;
  background-color: #fff;
}

.option-list {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.option-list .contact-wrap {
  position: absolute;
  left: 0;
  top: 28%;
  opacity: 0;
}
.left-list {
  display: flex;
  align-items: center;
}

.option-list image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

.option-list .option-name {
  display: inline-block;
  margin-left: 20rpx;
}

.right-list image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.btn-view {
  width: 200rpx;
}

button::after {
  border: none;
}

button {
  background-color: #fff;
}